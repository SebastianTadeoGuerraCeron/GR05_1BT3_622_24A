<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.0">
    <persistence-unit name="JavaWebLasHuequitas" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Clases de las entidades -->
        <class>modelo.Foro</class>
        <class>modelo.Resena</class>
        <class>modelo.Comentario</class>
        <class>modelo.Usuario</class>
        <class>modelo.Reaccion</class>
        <class>modelo.Receta</class>

        <!-- Configuración de la base de datos -->
        <properties>
            <!-- URL de la base de datos para Apache Derby -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:derby:./database/LasHuequitasDB;create=true"/>

            <!-- Usuario y contraseña (Derby no requiere esto en modo embebido, pero puedes dejarlos) -->
            <property name="jakarta.persistence.jdbc.user" value="user"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>

            <!-- Driver de la base de datos -->
            <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>

            <!-- Configuración de Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Mostrar las consultas SQL en la consola -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
